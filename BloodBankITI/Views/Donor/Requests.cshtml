<div class="render">
    <h4>المحتاجين للتبرع بالدم</h4><hr />
    <div id="requests">

    </div>
</div>
<div style="margin-bottom:240px;"></div>
<script>
    var model = @Html.Raw(Json.Encode(Model));
    setInterval(ajax, 1000);
    function ajax(){
        $.ajax({
            url: 'http://www.bloodservice.somee.com/Home/DonorRequests/' + model ,
            type: 'GET',
            dataType: 'json',
            success: function (data) {

                WriteResponse(data);
            },
            error: function (e) {
                alert(e.statusText);
            }
        });


    };

    function WriteResponse(data) {
        var result= "";
        $.each(data, function (index, requests) {
            //result += "<div>"+ requests.Fname+" "+requests.Lname+" له نفس فصيلة دمك ويحتاج إلى التبرع ويمكنك التواصل معه <br> تليفون : "+requests.Phone+" <br> بريد إلكتروني : "+requests.Email+" <br> تاريخ طلب التبرع : "+requests.AskDate+"<br><form action='/Donor/AcceptRequest/"+requests.NID+"/"+model+"' method='get'><input type='submit' value='قبول' ></form><br><form action='/Donor/CancelRequest/"+requests.NID+"/"+model+"' method='get'><input type='submit' value='رفض' ></form></div>";
            result += "<div class='outset'><label style='text-align:right'>"+ requests.Fname+" "+requests.Lname+"</label><br /><br /><p>له نفس فصيلة دمك ويحتاج إلى التبرع ويمكنك التواصل معه <br /><p>رقم التليفون :" + requests.Phone + "</p><p>"+ requests.Email +":بريد إلكتروني "+ "</p><p>"+ requests.AskDate+" :تاريخ طلب التبرع  "+ "<br><center><form action='/Donor/AcceptRequest/"+ requests.NID +"' method='get'><input type='submit' class = 'btn waves-effect waves-light red darken-4' value='قبول' /></form></br><form action='/Donor/CancelRequest/"+requests.NID+"/"+model+"' method='get'><input type='submit' class = 'btn waves-effect waves-light red darken-4' value='رفض' /></form></center></div><br><br>";
            });
        $('#requests').html(result);

    }
</script>

