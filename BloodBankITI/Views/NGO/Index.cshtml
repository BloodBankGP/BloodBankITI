        <label>الاســــــــــــم</label><br />
        <p>@Model.Name</p>
        <br />
        <label>العنــــــــــوان</label><br />
        <p>@Model.Address</p>
        <br />
        <label>رقم الهـــاتف</label><br />
        <p>@Model.Phone</p>
        <br />
        <label> المدينـــــــــة </label><br />
        <p>@Model.CityName</p>
    </div>
    @*<div style="float:left;"> 
        <a href="http://www.lifemakers.org/">
            <img src="~/img/download.jpg" style="padding-left:50px;" />
        </a>
    </div>*@
    <br /><br /><br /><br />
