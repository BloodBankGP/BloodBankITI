@model BloodBankITI.Models.NgoUpdate
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />


<div class="render">
    <div class="container white z-depth-2">
        <div class="card-panel #b71c1c red darken-4"><h5 style="color:aliceblue;text-align:center;font-family:'Myriad عربي';">  تعديل</h5>  </div>
        <form action="" method="post" novalidate="novalidate">
            <div class="form-group">
                <input type="hidden" name="NID" value=@Model.ngo.NID>
            </div>
            @*<div class="form-group">
                    @Html.DisplayNameFor(p => p.ngo.Name)

                    <input type="text" name="ngo.Name" value=@Model.ngo.Name>
                </div>*@
            <div class="form-container">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="last_name" type="text" class="validate" name="ngo.Name" value=@Model.ngo.Name style="text-align:left">
                        <label class="right-align" for="last_name">الاسم   </label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input id="email-confirm" type="tel" class="validate" name="ngo.Phone" style="text-align:left;">
                        <label class="right-align" for="phone">رقم التليفون </label>
                    </div>
                </div>

                <div class="row" style="float:right;">
                    <div class="input-field col s12">
                        <div class="mdl-select mdl-js-select mdl-select--floating-label">
                            <select name="ngo.CID" id="CitiesID" class="mdl-select__input">
                                <option value="0">Not Set</option>
                                @foreach (var item in Model.CitiesSelectAllResults)
                                {


                                    if (item.CID == Model.ngo.CID)
                                    {
                                        <option value=@item.CID selected="selected">@item.CityName</option>
                                    }
                                    else
                                    {
                                        <option value=@item.CID>@item.CityName</option>
                                    }
                                }
                            </select>
                            <label class="mdl-select__label" for="professsion" style="margin-left:250px;">  المدينة </label>
                            <span class="mdl-textfield__error">Number required!</span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input id="last_name" type="text" class="validate" name="ngo.Name" value=@Model.ngo.Address style="text-align:left">
                        <label class="right-align" for="last_name">العنوان    </label>
                    </div>
                </div>

            </div>


            @*<div class="form-group">
                    @Html.DisplayNameFor(p => p.ngo.Phone)

                    <input type="text" name="ngo.Phone" />
                </div>*@

            @*<div class="form-group">
                    @Html.LabelFor(model => model.ngo.CID, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        <select name="ngo.CID" id="CitiesID">

