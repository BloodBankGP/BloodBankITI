@model IEnumerable<BloodBankITI.Models.PostsComments>
@{
    ViewBag.Title = "WallPosts";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>WallPosts</h2>

@foreach (var post in Model)
{
    <div id="post">
        <h6>@post.post.Name</h6>
        <h6>@post.post.Insert_date.Value.Date</h6>
        <h6>@post.post.Post</h6>
    </div>
   
        foreach (var comment in post.comments)
        {
        <h6>@comment.Name</h6>
        <h6>@comment.Comment</h6>
        }
  
    

        <h6>Insert Comment</h6>
        <form action="" method="post">
            @if (Session["UserName"].ToString() != null)
            { 
                <input type="text" name="comment.Name" value=@Session["UserName"].ToString() />
            }
            else
            {
                <input type="text" name="comment.Name" />
            }
            <input type="text" name="c.Comment" />
            <input type="submit" value="Insert" />
        </form>



}

