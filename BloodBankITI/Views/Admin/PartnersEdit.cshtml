@model BloodBankITI.Models.PartnerCities
@{
    ViewBag.Title = "PartnersEdit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />
<br /><br /><br />
@if (Session["UserId"] == null && Session["UserName"] == null)
            {
    <form style="margin-left:10px; margin-top:-35px;">
        <a href="/Login/Index" style="text-decoration:none;">
            <img src="~/img/signin.png" height="30" width="30" title="تسجيل الدخول" />

        </a>
        &nbsp;
        <a href="/Home/Register" style="text-decoration:none;">
            <img src="~/img/add-user.png" height="35" width="35" title="إنشاء حساب" />

        </a>
    </form>
}
else
{
    switch (Session["UserType"].ToString())
    {
        case "1":

            <a href="/home/logout" class="user" style="text-decoration:none;color:black;font-size:20px;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/admin/index" class="user" style="text-decoration:none;color:black;font-size:20px;">
                @(Session["Fname"] + " " + Session["Lname"])
            </a>
            break;
        case "2":
            <a href="/home/logout" class="user" style="text-decoration:none;color:black;font-size:20px;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" style="left:25%;position:relative;" />
            </a>
            <a href="/donor/Index" class="user" style="text-decoration:none;color:black;font-size:20px;">
                @(Session["Fname"] + " " + Session["Lname"])
            </a>
            break;
        case "3":

            <a href="/home/logout" class="user" style="text-decoration:none;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/ngo/index" class="user" style="text-decoration:none;color:black;font-size:20px;">   @(Session["Fname"])  </a>

            break;
        case "4":

            <a href="/home/logout" class="user" style="text-decoration:none;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/partner/index" class="user" style="text-decoration:none;color:black;font-size:20px;"> @(Session["Fname"]) </a>

            break;
    }
}
<div class="render">
    <div class="container white z-depth-5">
        <div class="card-panel red darken-4"><h5>تعديل معلومات الشركاء</h5></div>
        <div id="register" class="col s12">
            <form class="col s12" action="" method="post" novalidate="novalidate">
                <div class="form-container">
                    <div class="row">
                        <div class="input-field col s6">
                            <input type="hidden" class="validate" name="Partner.PAID" value=@Model.partnersSelectResult.PAID style="text-align:right">
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" class="validate" name="Partner.Name" value=@Model.partnersSelectResult.Name style="text-align:right;" required>
                            <label class="right-align" for="Partner.Name">الاسم </label>
                            @Html.ValidationMessageFor(a => a.partnersSelectResult.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input type="text" class="validate" name="Partner.Address" value=@Model.partnersSelectResult.Address style="text-align:right;" required>
                            <label class="right-align" for="Partner.Address">العنوان</label>
                            @Html.ValidationMessageFor(a => a.partnersSelectResult.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <div class="mdl-select mdl-js-select mdl-select--floating-label">
                                <label class="right-align" for="Message" style="text-align:right; width:460px;">الحالة</label>
                                @Html.ValidationMessageFor(a => a.partnersSelectResult.Status, "", new { @class = "text-danger" })
                            </div>


                            <div dir="rtl">
                                <select class="mdl-select__input" id="professsion" name="Partner.Status">
                                    @if (@Model.partnersSelectResult.Status == true)
                                    {
                                        <option selected value="true">True</option>
                                        <option value="false"> False </option>
                                    }
                                    else
                                    {
                                        <option value="true">True</option>
                                        <option selected value="false"> False </option>
                                    }

                                </select>
                                @Html.ValidationMessageFor(a => a.partnersSelectResult.Status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                   </div>

                    <center>
                        @Html.ActionLink("إلغاء", "Partners", null, new { @class = "btn waves-effect waves-light red darken-4" })
                        <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">موافق</button>
                    </center>   
                    </div>
            </form>
           
        </div>       
    </div>
</div>


