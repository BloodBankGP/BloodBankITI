@model BloodBankITI.Models.Partners_select_Result
@{
    ViewBag.Title = "PartnersEdit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>PartnersEdit</h2>

<form action="" method="post" novalidate="novalidate">
    <div class="form-group">

        <input type="hidden" name="Partner.PAID" value=@Model.PAID />
    </div>
    <div class="form-group">
        Name :

        <input type="text" name="Partner.Name" value=@Model.Name>
    </div>
    <div class="form-group">
        Address :

        <input type="text" name="Partner.Address" value=@Model.Address>
    </div>
    <div class="form-group">
        Status :

        <select name="Partner.Status">
            @if (@Model.Status == true)
            {
                <option selected value="true">True</option>
                <option value="false"> False </option>
            }
            else
            {
                <option value="true">True</option>
                <option selected value="false"> False </option>
            }
        </select>
    </div>

    <div>
        <input type="submit" value="edit" />
    </div>
</form>

@Html.ActionLink("Cancel", "Partners")