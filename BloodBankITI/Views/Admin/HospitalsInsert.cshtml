@model BloodBankITI.Models.HospitalsCity
@{
    ViewBag.Title = "HospitalsInsert";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>HospitalsInsert</h2>

<form action="" method="POST">

    Name:
    <input type="text"  name="Hospital.Name" />

    Phone:
    <input type="text"  name="Hospital.Phone" />

    Address:
    <input type="text"  name="Hospital.Address" />

    City:
    <select name="Hospital.CID">
        <option>Not Set</option>
        @foreach (var item in Model.CitiesSelectAllResults)
        {
           
                <option value=@item.CID>@item.CityName</option>
            
        }
    </select>
    <input type="submit" value="Insert" />
</form>

