@model BloodBankITI.Models.HospitalsCity
@{
    ViewBag.Title = "HospitalsInsert";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />


<div class="render" style="margin-top: 26px; height:850px;">
    <div class="container white z-depth-2" style="height:800px;">
        <div class="card-panel #b71c1c red darken-4">
            <h5>إضافة مستشفى</h5>
        </div>
    <br />
        <div id="register" class="col s12">
            <form class="col s12" action="" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <label class="right-align" for="first_name" style="font-family:'Myriad عربي';">الاسم </label>
                        <input type="text" name="Hospital.Name" class="right-align" />
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label class="right-align" for="first_name" style="font-family:'Myriad عربي';">رقم الهاتف  </label>
                        <input type="number" name="Hospital.Phone" class="right-align" />
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <label class="right-align" for="first_name" style="font-family:'Myriad عربي';">   العوان  </label>
                        <input type="text" name="Hospital.Address" class="right-align" />
                    </div>
                </div>

                <div class="row" dir="rtl">
                    <div class="input-field col s12">
                        <p style="font-family:'Myriad عربي';font-size:20px; float:right;">المدينة</p>
                    </div>
                </div>

                <select name="Hospital.CID" class="mdl-select__input" dir="rtl">
                    <option value="null">إختر مدينة</option>
                    @foreach (var item in Model.CitiesSelectAllResults)
                    {

                        <option value=@item.CID>@item.CityName</option>
                    }
                </select>
                <br /><br /><br /><br />

                <center>
                    @Html.ActionLink("إلغاء", "Hospitals", null, new { @class = "btn waves-effect waves-light red darken-4" })
                    <input type="submit" value="إدخال" class="btn waves-effect waves-light red darken-4 " />
                </center>
            </form>


        </div>
        </div>
</div>
