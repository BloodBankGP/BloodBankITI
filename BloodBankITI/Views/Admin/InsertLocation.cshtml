@model int?

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<head>
    <link href="~/Content/materialize.css" rel="stylesheet" />
</head>

<div class="render" >
    <div class="container white z-depth-2" style="height:auto;">
        <div class="card-panel #b71c1c red darken-4"><h5 style="color:aliceblue;text-align:center;font-family:'Myriad عربي';">إضافة منطقة جديدة</h5>  </div>
        <form class="col s12" action="" method="post">
            <div class="form-container">
                <div class="row">
                    <input type="hidden" name="Location.LID" value=@Model />
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" name="Location.LocationName" class="validate" style="text-align:right" />
                        <label class="right-align">اسم المنطقة  </label>
                    </div>
                </div>
                <center>
                    @Html.ActionLink("إلغاء", "Cities", null, new { @class = "btn waves-effect waves-light red darken-4" })
                    <button class="btn waves-effect waves-light red darken-4" type="submit" value="Insert" >موافق</button>
                </center>
            </div>
        </form>

    </div>
</div>

