@model BloodBankITI.Models.EmergencyCityHospitals
@{
    ViewBag.Title = "EmergencyEdit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />

<div class="render">
    <div class="container white z-depth-2">
    <div class="card-panel #b71c1c red darken-4"><h4 style="font-size:45px; color:white; font-family:'Myriad عربي'; text-align:center;">تعديل</h4>
</div>

        <div id="register" class="col s12">
            <form class="col s12" action="" method="post">
                <div class="row" dir="rtl">
                    <div class="input-field col s12">
                      <p style="font-family:'Myriad عربي';font-size:20px; float:right;" >المدينة</p>  <input type="text" value="@Model.emergency.CityName" style="float:right; " /><br />
                    </div>
                </div>
                <div class="row" dir="rtl">
                    <div class="input-field col s12">
                        <input type="hidden" value=@Model.emergency.CID name="emergency.CID" style="float:right;" />
                    </div>
                </div>
                <div class="row" dir="rtl">
                    <div class="input-field col s12" style="float:right;" >
                        <p style="font-family:'Myriad عربي';font-size:20px; float:right;"> اليوم </p><input type="text" value=@Model.emergency.Day name="emergency." style="float:right; " /><br />
</div>
                </div>
                <input type="hidden" value=@Model.emergency.DayID name="emergency.DayID" style="float:right; " />
                <div class="row" dir="rtl">
                   
                    <p style="font-family:'Myriad عربي';font-size:20px; float:right;">المستشفى</p>
                        
                        <select name="emergency.HID" class="mdl-select__input">
                            <option value="null">اختر مستشفى</option>
                            @foreach (var item in Model.Hospitals)
                            {
                                if (item.HID == Model.emergency.HID)
                                {
                                    <option selected value=@item.HID>@item.Name</option>
                                }
                                else
                                {
                                    <option value=@item.HID>@item.Name</option>
                                }
                            }
                        </select>
</div>
               <br /><br />
                        <input type="submit" value="حفظ" class="btn waves-effect waves-light red darken-4" style="text-align:center;margin-left: 20px;"/>
            </form>
                    </div>
                   
   <p style="text-align:right;text-align: right;margin-top: -35px;">@Html.ActionLink("إلغاء", "Emergency", null, new { @class = "btn waves-effect waves-light red darken-4" })</p>  
          @*@Html.ActionLink("العودة للصفحة الرئيسية", "Index")*@
                                                                                                                       

                    @*@Html.ActionLink("إلغاء", "Emergency")*@

                
    </div></div>