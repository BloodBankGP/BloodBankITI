@model BloodBankITI.Models.Admins_select_Result

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />

<div class="render">
    <div class="container white z-depth-2">
        <div class="card-panel #b71c1c red darken-4"><h5 style="color:aliceblue;text-align:center;font-family:'Myriad عربي';">  تعديل الصفحة الشخصية </h5>  </div>
        <div id="register" class="col s12">
            <form class="col s12" action="" method="POST">
                <div class="form-container">

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="last_name" type="text" class="validate" name="Admin.Fname" value=@Model.Fname style="text-align:left;">
                            <label class="right-align" for="first_name">الاسم الاول</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="last_name" type="text" class="validate" name="Admin.Lname" value=@Model.Lname style="text-align:left">
                            <label class="right-align" for="last_name">الاسم الثانى  </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="text" class="validate" name="Login.UserName" value=@Model.UserName style="text-align:left;">
                            <label class="right-align" for="bloodId"> اسم المستخدم </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password-confirm" type="password" class="validate" name="Login.Password" value=@Model.Password style="text-align:left;">
                            <label class="right-align" for="city">كلمة المرور </label>
                        </div>
                    </div>
                    <input type="hidden" value=@Model.AID name="Admin.AID" />

                </div>
                @*<input type="submit" value="Save" />*@
                <center>
                    @Html.ActionLink("إلغاء", "ViewProfile", new { id = @Model.AID }, new { @class = "btn waves-effect waves-light red darken-4" })
                    <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">حفظ</button>
                </center>
                
            </form>

        </div>
  </div>
</div>