@model BloodBankITI.Models.Admins_select_Result

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<link href="~/Content/materialize.css" rel="stylesheet" />
<br /><br /><br />
@if (Session["UserId"] == null && Session["UserName"] == null)
            {
    <form style="margin-left:10px; margin-top:-35px;">
        <a href="/Login/Index" style="text-decoration:none;">
            <img src="~/img/signin.png" height="30" width="30" title="تسجيل الدخول" />

        </a>
        &nbsp;
        <a href="/Home/Register" style="text-decoration:none;">
            <img src="~/img/add-user.png" height="35" width="35" title="إنشاء حساب" />

        </a>
    </form>
}
else
{
    switch (Session["UserType"].ToString())
    {
        case "1":

            <a href="/home/logout" class="user" style="text-decoration:none;color:black;font-size:20px;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/admin/index" class="user" style="text-decoration:none;color:black;font-size:20px;">
                @(Session["Fname"] + " " + Session["Lname"])
            </a>
            break;
        case "2":
            <a href="/home/logout" class="user" style="text-decoration:none;color:black;font-size:20px;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" style="left:25%;position:relative;" />
            </a>
            <a href="/donor/Index" class="user" style="text-decoration:none;color:black;font-size:20px;">
                @(Session["Fname"] + " " + Session["Lname"])
            </a>
            break;
        case "3":

            <a href="/home/logout" class="user" style="text-decoration:none;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/ngo/index" class="user" style="text-decoration:none;color:black;font-size:20px;">   @(Session["Fname"])  </a>

            break;
        case "4":

            <a href="/home/logout" class="user" style="text-decoration:none;">
                <img src="~/img/logout.png" width="35" height="35" title="تسجيل الخروج" />
            </a>
            <a href="/partner/index" class="user" style="text-decoration:none;color:black;font-size:20px;"> @(Session["Fname"]) </a>

            break;
    }
}

<div class="render">
    <div class="container white z-depth-2">
        <div class="card-panel #b71c1c red darken-4"><h5 style="color:aliceblue;text-align:center;font-family:'Myriad عربي';">  تعديل الصفحة الشخصية </h5>  </div>
        <div id="register" class="col s12">
            <form class="col s12" action="" method="POST">
                <div class="form-container">

                    <div class="row">
                        <div class="input-field col s12">
                            <input id="last_name" type="text" class="validate" name="Admin.Fname" value=@Model.Fname style="text-align:left;" required>
                            <label class="right-align" for="first_name">الاسم الاول</label>
                            @Html.ValidationMessageFor(a => a.Fname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="last_name" type="text" class="validate" name="Admin.Lname" value=@Model.Lname style="text-align:left" required />
                            <label class="right-align" for="last_name">الاسم الثانى  </label>
                            @Html.ValidationMessageFor(a => a.Lname, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password" type="text" class="validate" name="Login.UserName" value=@Model.UserName style="text-align:left;" required>
                            <label class="right-align" for="bloodId"> اسم المستخدم </label>
                            @Html.ValidationMessageFor(a => a.UserName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input id="password-confirm" type="password" class="validate" name="Login.Password" value=@Model.Password style="text-align:left;" required>
                            <label class="right-align" for="city">كلمة المرور </label>
                            @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <input type="hidden" value=@Model.AID name="Admin.AID" />

                </div>
                @*<input type="submit" value="Save" />*@
                <center>
                    @Html.ActionLink("إلغاء", "ViewProfile", new { id = @Model.AID }, new { @class = "btn waves-effect waves-light red darken-4" })
                    <button class="btn waves-effect waves-light red darken-4" type="submit" name="action">حفظ</button>
                </center>
                
            </form>

        </div>
  </div>
</div>